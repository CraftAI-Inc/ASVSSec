@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, @User.Identity.Name!</h1>
    <p>Below are your private tasks.</p>
</div>

<hr />

<h3>My Tasks</h3>
<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserTasks)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-page="./TaskDetails" asp-route-id="@item.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info mt-4">
    <strong>To Test IDOR:</strong> Click "View Details" on one of your tasks, then manually increment the ID number in your browser's address bar.
</div>